<UserControl x:Class="EditorK.EditorMenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:k="clr-namespace:EditorK"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">


    <Menu>
        <MenuItem Header="文件">
            <MenuItem Header="新建" Command="New"/>
            <MenuItem Header="打开" Command="Open"/>
            <MenuItem Header="保存" Command="Save"/>
            <MenuItem Header="另存为" Command="SaveAs"/>
        </MenuItem>
        <MenuItem Header="编辑">
            <MenuItem Header="撤销" Command="Undo"/>
            <MenuItem Header="重做" Command="Redo"/>
        </MenuItem>
    </Menu>
</UserControl>
